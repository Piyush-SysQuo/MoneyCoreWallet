<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".View.Activity.EditProfile.EditProfileActivity">

    <RelativeLayout
        android:id="@+id/Relative_Header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/Iv_EditProfile_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/back_white"
            android:onClick="backPressed"/>

        <TextView
            android:id="@+id/Tv_EditProfile_Head"
            style="@style/Text_Login_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/edit_profile" />
    </RelativeLayout>
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/TV1"
    android:layout_alignParentBottom="true"
    android:fillViewport="true"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingStart="@dimen/_10sdp"
    android:scrollbars="none"
    android:layout_marginBottom="@dimen/_20sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--*********************************************************************************************-->
<!--******************************FIRST NAMR*****************************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_EditProfile_FirstNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextInputLayout_SignUp"
            android:hint="@string/first_name"
            android:layout_marginTop="@dimen/_30sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_EditProfile_FirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                style="@style/TextInputEditText_SignUp"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************MIDDLE NAMR*****************************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_EditProfile_MiddleNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextInputLayout_SignUp"
            android:hint="@string/middle_name"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_EditProfile_MiddleName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                style="@style/TextInputEditText_SignUp"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--********************************LAST NAME****************************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_EditProfile_LastNameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextInputLayout_SignUp"
            android:hint="@string/last_name"
            android:layout_marginTop="@dimen/_20sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_EditProfile_LastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                style="@style/TextInputEditText_SignUp"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--********************************PHONE NUMBER*************************************************-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="vertical">
                <com.hbb20.CountryCodePicker
                    android:layout_height="wrap_content"
                    android:id="@+id/ccp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    app:ccp_defaultNameCode="FR"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="@dimen/_12sdp"
                    style="@style/TextInputEditText_SignUp"
                    app:ccpDialog_textColor="@color/warm_grey"
                    app:ccp_contentColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/carmensans_bold"
                    android:layout_marginTop="@dimen/_minus2sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/MTIL_EditProfile_mobileNumberLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                app:hintTextAppearance="@style/TextInputLayout_SignUp"
                android:hint="@string/phoneNo"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_minus3sdp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EditText_EditProfile_MobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="11"
                    android:fontFamily="@font/carmensans_bold"
                    style="@style/TextInputEditText_SignUp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO EMAIL ADDRESS *****************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_EditProfile_GenderLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextInputLayout_SignUp"
            android:hint="@string/gender"
            android:layout_marginTop="@dimen/_20sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_EditProfile_Gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                style="@style/TextInputEditText_SignUp"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO Date Of Birth *****************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_EditProfile_DOBLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextInputLayout_SignUp"
            android:hint="@string/dob"
            android:layout_marginTop="@dimen/_20sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_EditProfile_DOB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_12sdp"
                android:focusable="false"
                style="@style/TextInputEditText_SignUp"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID NAME  **********************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_EditProfile_idTypeLayout_Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="@string/id_type"
            android:layout_marginTop="@dimen/_20sdp"
            app:endIconMode="custom"
            app:endIconTint="#7b8ea4"
            app:endIconDrawable="@drawable/ic_dropdown"
            app:endIconCheckable="true"
            android:visibility="gone">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_EditProfile_ID_TYpe_Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:clickable="false"
                android:editable="false"
                style="@style/TextView_11_Medium_White"
                android:textColor="@color/colorPrimaryDark"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID NUMBER  ********************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_EditProfile_idNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="@string/legal_id"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="visible">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_EditProfile_ID_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                style="@style/TextView_11_Medium_White"
                android:textColor="@color/colorPrimaryDark"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID IMAGES *********************************************-->
        <LinearLayout
            android:id="@+id/Layout_Id_Img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_15sdp">
            <ImageView
                android:id="@+id/IV_EditProfile_frontImg"
                android:layout_width="@dimen/_74sdp"
                android:layout_height="@dimen/_74sdp"
                android:src="@drawable/man_1"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:id="@+id/IV_EditProfile_frontImg_Cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                android:layout_marginStart="@dimen/_minus10sdp"/>
            <ImageView
                android:id="@+id/IV_EditProfile_backImg"
                android:layout_width="@dimen/_74sdp"
                android:layout_height="@dimen/_74sdp"
                android:src="@drawable/man_2"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_alignParentTop="true"/>
            <ImageView
                android:id="@+id/IV_EditProfile_backImg_Cross"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_cross"
                android:layout_marginStart="@dimen/_minus10sdp"/>
        </LinearLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID IMAGES CAPTURE *************************************-->
        <LinearLayout
            android:id="@+id/Layout_EditProfile_AddNewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/background_round"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/Tv_CashInAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:fontFamily="@font/carmensans_medium"
                android:lineHeight="@dimen/_21sdp"
                android:lineSpacingExtra="0.08dp"
                android:text="@string/add_new_id"
                android:textColor="@color/button_color"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>     <!-- ADD NEW ID-->

        <LinearLayout
            android:id="@+id/Layout_EditProfile_Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:weightSum="2">

            <TextView
                android:id="@+id/Tv_EditProfile_AddressHead"
                style="@style/Text_Profile_Head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:gravity="center|start"
                android:text="@string/address" />

            <TextView
                android:id="@+id/Tv_EditProfile_Address"
                style="@style/Text_Profile_Address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_2sdp"
                android:gravity="center|start"
                android:text="52 Rue des fleurs\nBP 90432 Libourne 33500 France" />
        </LinearLayout>     <!--ADDRESS-->

        <LinearLayout
            android:id="@+id/Layout_EditProfile_AddNewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:background="@drawable/background_round"
            android:gravity="center|start"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10sdp"
            android:paddingTop="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:paddingBottom="@dimen/_5sdp"
            android:weightSum="2">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:fontFamily="@font/carmensans_medium"
                android:lineHeight="@dimen/_21sdp"
                android:lineSpacingExtra="0.08dp"
                android:text="@string/add_new_address"
                android:textColor="@color/button_color"
                android:textSize="@dimen/_11sdp" />
        </LinearLayout>     <!-- ADD NEW ADDRESS-->
<!--*********************************************************************************************-->
<!--******************************** TODO BUTTON SIGN IN ****************************************-->
        <TextView
            android:layout_width="match_parent"
            style="@style/ButtonStyle_Login"
            android:layout_marginTop="@dimen/_37sdp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:onClick="saveClick"
            android:text="@string/save"/>
<!--*********************************************************************************************-->
<!--******************************** TODO SIGN IN ***********************************************-->

<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
    </LinearLayout>
</ScrollView>
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->

</LinearLayout>