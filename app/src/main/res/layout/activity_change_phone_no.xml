<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".View.Activity.ChangePhoneNo.ChangePhoneNoActivity">

    <RelativeLayout
        android:id="@+id/Relative_Header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/Iv_PhoneNoChange_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/back_white"
            android:onClick="backPressed"/>

        <TextView
            android:id="@+id/Tv_PhoneNolChange_Head"
            style="@style/Text_Login_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/change_phone_number" />
    </RelativeLayout>

<!--*********************************************************************************************-->
<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/MTIL_ChangePhone_PhoneNoLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hintTextAppearance="@style/TextInputLayout_Login"
    android:hint="@string/enter_new_phone_number"
    android:layout_marginTop="@dimen/_30sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">
    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ChangePhone_EditText_PhoneNo"
        style="@style/TextInputEditText_Login"
        android:inputType="number"
        android:maxLength="11"/>
</com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/MTIL_ChangePhone_SecurityPinLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:hintTextAppearance="@style/TextInputLayout_Login"
    android:hint="@string/enter_security_pin"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp">
    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ChangePhone_EditText_SecurityPin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextInputEditText_Login"
        android:password="true"
        android:inputType="textPassword"/>
</com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<TextView
    android:layout_width="match_parent"
    style="@style/ButtonStyle_Login"
    android:layout_marginTop="@dimen/_47sdp"
    android:background="@drawable/button_background"
    android:layout_marginEnd="@dimen/_10sdp"
    android:layout_marginStart="@dimen/_10sdp"
    android:gravity="center"
    android:onClick="attemptChangePhoneNo"
    android:text="Update"
    android:textAllCaps="true" />
<!--*********************************************************************************************-->

</LinearLayout>