<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Relative_Header"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/colorPrimaryDark">

        <ImageView
            android:id="@+id/Iv_SpaceToWallet_Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"
            android:src="@drawable/back_white" />

        <TextView
            android:id="@+id/Tv_SpaceToWallet_Head"
            style="@style/Text_Login_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/transfer_to_wallet" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/LLTH1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_20sdp">

            <LinearLayout
                android:id="@+id/LL_SpaceToWallet1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Tv_SpaceToWallet_Tot_Amt"
                    style="@style/Text_transfr_Bal_Amt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="€470.00" />

                <TextView
                    android:id="@+id/Tv_SpaceToWallet_AmtHead"
                    style="@style/Text_transfr_Bal_AmtHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:text="@string/available_balance" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
<!--*********************************************************************************************-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/MTIL_SpaceToWalletAmount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/amount"
        app:hintTextAppearance="@style/TextInputLayout_SpaceToWallet"
        app:prefixText="€"
        app:prefixTextAppearance="@style/TextInputEditText_Space"
        app:prefixTextColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditText_SpaceToWalletAmount"
            style="@style/TextInputEditText_SpaceToWallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"/>
    </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
    <TextView
        android:id="@+id/Tv_BtnSpaceToWallet"
        android:layout_width="match_parent"
        style="@style/ButtonStyle_Login"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/button_background"
        android:gravity="center"
        android:text="@string/transfer"/>
<!--*********************************************************************************************-->
</LinearLayout>