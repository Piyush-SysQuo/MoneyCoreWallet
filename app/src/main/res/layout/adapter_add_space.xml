<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout_Adpt_AddSpace"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_7sdp"
        android:gravity="start"
        android:orientation="horizontal"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:weightSum="3"
        android:background="@drawable/background_square_gray"
        android:elevation="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/Linear_AdptSpaceLeft"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart_Adpt_Space"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"
                android:clickable="false"
                android:focusable="false" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/Linear_AdptSpaceRight"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Tv_AdptSpaceName"
                    style="@style/TextAdptHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/space" />

                <ImageView
                    android:id="@+id/Iv_AdptSpaceOption"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/three_dot"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/Tv_AdptSpaceAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAdptAmt"
                android:text="â‚¬179.00"
                android:layout_gravity="center|start"/>

            <TextView
                android:id="@+id/Tv_AdptSpaceTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAdptTrns"
                android:text="@string/transfer"
                android:layout_gravity="center|start"
                android:layout_marginTop="@dimen/_8sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingEnd="@dimen/_10sdp"
                android:paddingStart="@dimen/_10sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:background="@drawable/background_round_corner_blue"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>