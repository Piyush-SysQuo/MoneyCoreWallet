<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:padding="@dimen/_20sdp"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/RL_Adap_FAQ_Parent_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp">

        <TextView
            android:id="@+id/TV_Adap_FAQ_Parent_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:fontFamily="@font/carmensans_medium"
            android:lineHeight="@dimen/_16sdp"
            android:lineSpacingExtra="0.14dp"
            android:text="How can I transfer Money?"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_11sdp" />

        <ImageView
            android:id="@+id/IV_Adap_FAQ_Parent_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_dropdown"
            android:backgroundTint="@color/colorPrimaryDark" />
    </RelativeLayout>

</LinearLayout>
