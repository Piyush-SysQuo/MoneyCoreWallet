<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <View
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_4sdp"
        android:background="#d4d5d7"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"/>

    <LinearLayout
        android:id="@+id/LayoutBtmCalendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible"
        android:padding="@dimen/_20sdp">
        <LinearLayout
            android:id="@+id/LayoutMainStmtDTSele"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/LayoutMainStmtDTSele_Right"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="@dimen/_5sdp">
                <TextView
                    android:id="@+id/TvStmtStartDTHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_date"
                    android:layout_gravity="start"
                    style="@style/TextDTHead"/>
                <RelativeLayout
                    android:id="@+id/RelativeStmtStartDT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/background_square_blue_white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/TvStmtStartDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_date"
                        android:layout_alignParentStart="true"
                        style="@style/TextDT"/>
                    <ImageView
                        android:id="@+id/IvStmtStartDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/LayoutMainStmtDTSele_Left"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:weightSum="2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginStart="@dimen/_5sdp">
                <TextView
                    android:id="@+id/TvStmtEndDTHead"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/end_date"
                    android:layout_gravity="start"
                    style="@style/TextDTHead"/>
                <RelativeLayout
                    android:id="@+id/RelativeStmtEndDT"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/background_square_blue_white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:padding="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/TvStmtEndDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/end_date"
                        android:layout_alignParentStart="true"
                        style="@style/TextDT"/>
                    <ImageView
                        android:id="@+id/IvStmtEndDT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check"
                        android:layout_alignParentEnd="true"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <CalendarView
            android:id="@+id/CalendarViewDTSelectionStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyDatePickerStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>
<!--
            android:theme="@style/CalenderViewCustom"
            android:dateTextAppearance="@style/CalenderViewDateCustomText"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"-->
        <CalendarView
            android:id="@+id/CalendarViewDTSelectionEnd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/MyDatePickerStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/Tv_StatementFilterApplyDate"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_41sdp"
            android:background="@drawable/button_background"
            android:text="@string/apply"
            android:gravity="center"
            style="@style/ButtonStyle_Login"
            android:onClick="statementRequestBottomDialog"
            android:layout_marginTop="@dimen/_5sdp"
            android:textAllCaps="true"/>
    </LinearLayout>
</LinearLayout>
