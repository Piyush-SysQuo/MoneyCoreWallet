<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:id="@+id/lnn"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/Linear_Top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingStart="@dimen/_13sdp"
        android:paddingEnd="@dimen/_13sdp"
        android:paddingTop="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/Linear_Top1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <TextView
                android:id="@+id/Tv_Home_Name"
                style="@style/TextView_19_PX_Regu_White"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_weight="1.5"
                android:gravity="left"
                android:text="Hey Good Morning\nDavid" />

            <LinearLayout
                android:id="@+id/Linear_Top1_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_weight="0.50"
                android:gravity="right"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/IV_Home_QRCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toStartOf="@+id/IV_Home_Notification"
                    android:src="@drawable/ic_qr_code"
                    tools:ignore="ObsoleteLayoutParam" />

                <ImageView
                    android:id="@+id/IV_Home_Notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_notification" />
            </LinearLayout>
        </LinearLayout>     <!--TOP Layout-->


        <LinearLayout
            android:id="@+id/Linear_Top2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/home_background_round"
            android:orientation="horizontal"
            android:layout_below="@+id/Linear_Top1">

            <LinearLayout
                android:id="@+id/Linear_Top2_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="@dimen/_21sdp"
                android:paddingTop="@dimen/_11sdp"
                android:paddingBottom="@dimen/_11sdp">

                <LinearLayout
                    android:id="@+id/Linear_Top2_1_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/Tv_wallet_Available_Bln"
                        style="@style/TextView_25_PX_Sm_Bold_White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:text="€470.00" />

                    <TextView
                        android:id="@+id/Tv_wallet_Available_head"
                        style="@style/TextView_12_PX_Regu_White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:text="Available Balance" />
                </LinearLayout>     <!--TOTAL BALANCE -->

                <LinearLayout
                    android:id="@+id/Linear_Top2_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_15sdp">

                    <TextView
                        android:id="@+id/Tv_wallet_Received_Bln"
                        style="@style/TextView_17_PX_SM_Bold_White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:drawableStart="@drawable/green_circle"
                        android:drawablePadding="@dimen/_9sdp"
                        android:gravity="center|left"
                        android:text="€70.00" />

                    <TextView
                        android:id="@+id/Tv_wallet_Received_head"
                        style="@style/TextView_12_PX_Regu_White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center|left"
                        android:text="Received" />
                </LinearLayout>     <!--RECEIVED-->

                <LinearLayout
                    android:id="@+id/Linear_Top2_1_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_9sdp">

                    <TextView
                        android:id="@+id/Tv_wallet_Spent_Bln"
                        style="@style/TextView_17_PX_SM_Bold_White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:drawableStart="@drawable/red_circle"
                        android:drawablePadding="@dimen/_9sdp"
                        android:gravity="center|left"
                        android:text="€50.00" />

                    <TextView
                        android:id="@+id/Tv_wallet_Spent_head"
                        style="@style/TextView_12_PX_Regu_White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:gravity="center|left"
                        android:text="Spent" />
                </LinearLayout>     <!--SPENT-->
            </LinearLayout>     <!--AMOUNTS-->

            <LinearLayout
                android:id="@+id/Linear_Top2_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingTop="@dimen/_11sdp"
                android:paddingEnd="@dimen/_12sdp">

                <LinearLayout
                    android:id="@+id/Linear_Top2_2_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/Tv_wallet_SwitchText"
                        style="@style/TextView_14_PX_Medi_White"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:gravity="center"
                        android:text="Lock" android:visibility="gone" />

                    <com.suke.widget.SwitchButton
                        android:id="@+id/switch_button1"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:layout_gravity="right"
                        app:sb_checked="false"
                        android:gravity="right"
                        app:sb_button_color="@color/white"
                        app:sb_background="@color/button_color"
                        app:sb_checked_color="@color/white"
                        app:sb_uncheck_color="@color/button_color"
                        app:sb_uncheckcircle_color="@color/button_color"
                        android:visibility="gone"/>
                    <Switch
                        android:id="@+id/switch_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:checked="false"
                        android:textOn="Unlock"
                        android:textOff="Lock"
                        android:text="Lock"
                        android:gravity="center"
                        android:track="@drawable/thumb_track"
                        android:thumb="@drawable/thumb"
                        style="@style/TextView_14_PX_Medi_White"
                        android:switchPadding="@dimen/_5sdp"/>
                </LinearLayout>
                <!--
                                        -->
                <LinearLayout
                    android:id="@+id/Linear_Top2_2_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/pieChart"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp"
                        android:clickable="false"
                        android:focusable="false" />
                </LinearLayout>
            </LinearLayout>     <!--GRAPH-->
        </LinearLayout>     <!--MIDDLE-->

        <LinearLayout
            android:id="@+id/Linear_Top3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_marginBottom="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_below="@+id/Linear_Top2">
            <LinearLayout
                android:id="@+id/Linear_Top3_1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/LinearGrid_Transfer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/IV_Wallet_Transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_transfer"
                        android:layout_marginTop="@dimen/_minus10sdp"/>
                    <TextView
                        android:id="@+id/TV_Wallet_Transfer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_13_PX_Regu_White"
                        android:text="@string/transfer"
                        android:layout_marginTop="@dimen/_minus15sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearGrid_Pay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/IV_Wallet_Pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pay"
                        android:layout_marginTop="@dimen/_minus10sdp"/>
                    <TextView
                        android:id="@+id/TV_Wallet_Pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_13_PX_Regu_White"
                        android:text="@string/pay"
                        android:layout_marginTop="@dimen/_minus15sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearGrid_History"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/IV_Wallet_History"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_history"
                        android:layout_marginTop="@dimen/_minus10sdp"/>
                    <TextView
                        android:id="@+id/TV_Wallet_History"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_13_PX_Regu_White"
                        android:text="@string/history"
                        android:layout_marginTop="@dimen/_minus15sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Linear_Top3_2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">
                <LinearLayout
                    android:id="@+id/LinearGrid_CashIn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/IV_Wallet_CashIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_cash_in"
                        android:layout_marginTop="@dimen/_minus10sdp"/>
                    <TextView
                        android:id="@+id/TV_Wallet_CashIn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_13_PX_Regu_White"
                        android:text="@string/cash_in"
                        android:layout_marginTop="@dimen/_minus15sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearGrid_Withdraw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/IV_Wallet_Withdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_withdraw"
                        android:layout_marginTop="@dimen/_minus10sdp"/>
                    <TextView
                        android:id="@+id/TV_Wallet_Withdraw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_13_PX_Regu_White"
                        android:text="@string/withdraw"
                        android:layout_marginTop="@dimen/_minus15sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/LinearGrid_Statement"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/IV_Wallet_Statement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_statement"
                        android:layout_marginTop="@dimen/_minus10sdp"/>
                    <TextView
                        android:id="@+id/TV_Wallet_Statement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TextView_13_PX_Regu_White"
                        android:text="@string/statement"
                        android:layout_marginTop="@dimen/_minus15sdp"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Linear_Home_Bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">
        <TextView
            android:id="@+id/TV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView_14_PX_Medi_White"
            android:text="Recent Transactions"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="#3A3540"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/TV1"
            android:layout_marginTop="@dimen/_5sdp"/>
    </RelativeLayout>
</LinearLayout>