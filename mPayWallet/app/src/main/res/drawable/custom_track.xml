<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:gravity="center|fill_horizontal">
        <selector>

            <item android:state_checked="false">
                <shape android:shape="rectangle">
                    <solid android:color="#e0ebf9"/>
                    <corners android:radius="@dimen/_25sdp"/>
                    <size android:height="@dimen/_16sdp" android:width="@dimen/_30sdp"/>
                    <padding android:left="@dimen/_4sdp"
                        android:right="@dimen/_4sdp"
                        android:top="@dimen/_2sdp"
                        android:bottom="@dimen/_2sdp"/>
                </shape>
            </item>

            <item android:state_checked="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimaryDark"/>
                    <corners android:radius="@dimen/_25sdp"/>
                    <size android:height="@dimen/_16sdp" android:width="@dimen/_30sdp"/>
                    <padding android:left="@dimen/_4sdp"
                        android:right="@dimen/_4sdp"
                        android:top="@dimen/_2sdp"
                        android:bottom="@dimen/_2sdp"/>
                </shape>
            </item>





        </selector>






    </item>
</layer-list>