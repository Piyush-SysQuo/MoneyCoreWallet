<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Activity.ForgotPassword.ForgotPasswordActivity">
<RelativeLayout
    android:id="@+id/Relative_Header"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimaryDark">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:onClick="backPressed"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/back_white"
        tools:ignore="OnClick" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_Login_head"
        android:gravity="center"
        android:text="@string/forgot_passwordhead" />
</RelativeLayout>
<!--*********************************************************************************************-->
    <ImageView
        android:layout_width="@dimen/_182sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_88sdp"
        android:src="@drawable/mpay_icon" />
<!--*********************************************************************************************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_65sdp">
        <!--********************************PHONE NUMBER*************************************************-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:layout_gravity="center"
                android:orientation="vertical">
                <com.hbb20.CountryCodePicker
                    android:layout_height="wrap_content"
                    android:id="@+id/ccp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    app:ccp_defaultNameCode="FR"
                    app:ccp_showFlag="false"
                    app:ccp_showNameCode="false"
                    app:ccp_textSize="@dimen/_12sdp"
                    style="@style/TextInputEditText_SignUp"
                    app:ccpDialog_textColor="@color/warm_grey"
                    app:ccp_contentColor="@color/colorPrimaryDark"
                    android:fontFamily="@font/carmensans_bold"
                    android:layout_marginTop="@dimen/_minus2sdp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightGrey"/>
            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/MTIL_mobileNumberLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                app:hintTextAppearance="@style/TextInputLayout_SignUp"
                android:hint="@string/phoneNo"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_minus3sdp">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/EditText_MobileNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:inputType="number"
                    android:maxLength="10"
                    android:fontFamily="@font/carmensans_bold"
                    style="@style/TextInputEditText_SignUp"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <!--*********************************************************************************************-->
      <TextView
            android:layout_width="match_parent"
            style="@style/ButtonStyle_Login"
            android:layout_marginTop="@dimen/_47sdp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:onClick="attemptResetPassword"
            android:text="@string/reset_password"
            android:textAllCaps="true" />
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
</LinearLayout>
<!--*********************************************************************************************-->
</LinearLayout>