<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".View.Activity.ForgotPassword.ForgotPasswordActivity">
<RelativeLayout
    android:id="@+id/Relative_Header"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimaryDark">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:onClick="backPressed"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/back_white"
        tools:ignore="OnClick" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_Login_head"
        android:gravity="center"
        android:text="@string/forgot_passwordhead" />
</RelativeLayout>
<!--*********************************************************************************************-->
    <ImageView
        android:layout_width="@dimen/_182sdp"
        android:layout_height="@dimen/_44sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_88sdp"
        android:src="@drawable/mpay_icon" />
<!--*********************************************************************************************-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_10sdp"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_65sdp">
<!--*********************************************************************************************-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/MTIL_ForPass_emailPnoneLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextInputLayout_Login"
        android:hint="@string/email_id_phone_number">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ForPass_EditText_EmailPhone"
            android:inputType="text"
            style="@style/TextInputEditText_Login"/>
    </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
        <TextView
            android:layout_width="match_parent"
            style="@style/ButtonStyle_Login"
            android:layout_marginTop="@dimen/_47sdp"
            android:background="@drawable/button_background"
            android:gravity="center"
            android:onClick="attemptResetPassword"
            android:text="@string/reset_password"
            android:textAllCaps="true" />
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
</LinearLayout>
<!--*********************************************************************************************-->
</LinearLayout>