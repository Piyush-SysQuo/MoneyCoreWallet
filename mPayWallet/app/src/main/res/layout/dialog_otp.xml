<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@color/white">
        <LinearLayout
            android:id="@+id/headerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_21sdp"
            android:paddingStart="@dimen/_21sdp"
            android:paddingEnd="@dimen/_21sdp"
            android:paddingRight="@dimen/_21sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_49sdp"
                android:src="@drawable/ic_otp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_39sdp"
                style="@style/TextDialog_Head"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="@string/verification" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextDialog_SubHead"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="Enter the code we sent over SMS to"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/TvOtpMobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextDialog_SubHead"
                    android:text="** *** *** 4771"
                    android:gravity="left"
                    android:layout_gravity="center|left" />
                <TextView
                    android:id="@+id/TvOtpChaneMobileNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextDialog_SubHead"
                    android:text="@string/change_number"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="left"
                    android:layout_gravity="center|left"
                    android:textColor="@color/button_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layoutDirection="ltr"
                android:weightSum="4">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="1"
                        android:id="@+id/etfirst"
                        android:inputType="number"
                        style="@style/EditTextDialog_OTP"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="1"
                        android:id="@+id/etsecand"
                        android:inputType="number"
                        style="@style/EditTextDialog_OTP"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLength="1"
                        android:id="@+id/etthird"
                        android:inputType="number"
                        style="@style/EditTextDialog_OTP"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:id="@+id/etfourth"
                        android:maxLength="1"
                        android:inputType="number"
                        style="@style/EditTextDialog_OTP"/>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_30sdp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resend_otp"
                android:layout_gravity="center"
                style="@style/EditTextDialog_OTPResend"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:56"
                android:layout_gravity="center"
                android:id="@+id/txt_resend"
                style="@style/EditTextDialog_OTPResend"
                android:textColor="@color/button_color"
                android:layout_marginStart="@dimen/_5sdp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/TvBtnVerify"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                style="@style/ButtonStyle_Login"
                android:background="@drawable/button_background"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="center"
                android:text="@string/verify"
                android:textAllCaps="true"/>


        </LinearLayout>
</LinearLayout>
