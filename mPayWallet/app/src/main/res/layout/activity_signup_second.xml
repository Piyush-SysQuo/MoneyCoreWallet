<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

<RelativeLayout
    android:id="@+id/Relative_Header"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="@color/colorPrimaryDark"
    android:visibility="gone">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/_15sdp"
        android:onClick="backPressed"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/back_white"
        tools:ignore="OnClick"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_Login_head"
        android:gravity="center"
        android:text="@string/create_new_account" />
</RelativeLayout>
    <TextView
        android:id="@+id/TV1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/create_new_account"
        style="@style/Text_Login_head"
        android:textSize="@dimen/_18sdp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:textColor="@color/colorPrimaryDark"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/TV1"
    android:layout_alignParentBottom="true"
    android:fillViewport="true"
    android:paddingEnd="@dimen/_10sdp"
    android:paddingLeft="@dimen/_10sdp"
    android:paddingRight="@dimen/_10sdp"
    android:paddingStart="@dimen/_10sdp"
    android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
<!--*********************************************************************************************-->
<!--******************************** TODO PASSWORD **********************************************-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/MTIL_passwordLayout_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextInputLayout_SignUp"
        android:hint="@string/password"
        app:passwordToggleDrawable="@drawable/visibility"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="@dimen/_30sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditText_Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:inputType="textPassword"
            style="@style/TextInputEditText_Login"/>
    </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO RE-PASSWORD *******************************************-->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/MTIL_re_passwordLayout_SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintTextAppearance="@style/TextInputLayout_SignUp"
        android:hint="@string/confirm_password"
        app:passwordToggleDrawable="@drawable/visibility"
        app:passwordToggleEnabled="true"
        android:layout_marginTop="@dimen/_20sdp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EditText_RePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:password="true"
            android:inputType="textPassword"
            style="@style/TextInputEditText_Login"/>
    </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID Type ***********************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_idTypeLayout"
            app:hintTextAppearance="@style/TextInputLayout_SignUp"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:boxBackgroundColor="@color/white"
            android:paddingStart="0dp"
            android:visibility="gone">

            <AutoCompleteTextView
                style="@style/Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
                android:id="@+id/ACTV_idTypeAutoCmplt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:editable="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp"
                android:lineHeight="@dimen/_21sdp"
                android:fontFamily="@font/carmensans_medium"
                android:paddingStart="0dp"
                android:hint="@string/id_type"
                app:hintTextColor="@color/white"
                android:layout_marginEnd="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:paddingTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_2sdp"/>

        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID NAME  **********************************************-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextInputLayout_SignUp"
                android:text="@string/id_type"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:visibility="gone"/>
            <Spinner
                android:id="@+id/Spinner_ID_Selection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:layout_marginTop="@dimen/_3sdp"
                android:dropDownVerticalOffset="0dp"
                android:gravity="start"
                android:spinnerMode="dropdown"
                style="@style/TextInputEditText_Login"
                android:textColor="@color/colorPrimaryDark"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:paddingStart="@dimen/_3sdp"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingEnd="@dimen/_3sdp"
                android:entries="@array/id_proof"
                android:dropDownSelector="@drawable/ic_arrow_drop_down_black_24dp"
                android:visibility="gone"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dialog_head"
                android:layout_marginTop="@dimen/_1sdp"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:layout_marginEnd="@dimen/_3sdp"
                android:visibility="gone"/>
<!--*********************************************************************************************-->
<!--******************************** TODO ID NAME  **********************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_idTypeLayout_Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="@string/id_type"
            android:layout_marginTop="@dimen/_20sdp"
            app:endIconMode="custom"
            app:endIconTint="#7b8ea4"
            app:endIconDrawable="@drawable/ic_dropdown"
            app:endIconCheckable="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_ID_TYpe_Menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:clickable="false"
                style="@style/TextView_11_Medium_White"
                android:textColor="@color/colorPrimaryDark"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID NUMBER  ********************************************-->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/MTIL_idNumberLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintTextAppearance="@style/TextAppearence.App.TextInputLayout"
            android:hint="@string/passportno"
            android:layout_marginTop="@dimen/_20sdp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/EditText_ID_Number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                style="@style/TextView_11_Medium_White"
                android:textColor="@color/colorPrimaryDark"/>
        </com.google.android.material.textfield.TextInputLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID IMAGES *********************************************-->
<LinearLayout
    android:id="@+id/Layout_Id_Img"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone"
    android:layout_marginTop="@dimen/_15sdp">
        <ImageView
            android:id="@+id/IV_frontImg"
            android:layout_width="@dimen/_74sdp"
            android:layout_height="@dimen/_74sdp"
            android:src="@mipmap/mpay_logo"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/IV_frontImg_Cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross"
            android:layout_marginStart="@dimen/_minus10sdp"/>
        <ImageView
            android:id="@+id/IV_backImg"
            android:layout_width="@dimen/_74sdp"
            android:layout_height="@dimen/_74sdp"
            android:src="@mipmap/mpay_logo"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_alignParentTop="true"/>
        <ImageView
            android:id="@+id/IV_backImg_Cross"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cross"
            android:layout_marginStart="@dimen/_minus10sdp"/>
</LinearLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO ID IMAGES CAPTURE *************************************-->
<LinearLayout
    android:id="@+id/Layout_Id_ImgCapture"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_43sdp"
    android:orientation="horizontal"
    android:background="@drawable/boarder_doted"
    android:layout_marginTop="@dimen/_20sdp"
    android:layout_gravity="center"
    android:onClick="AddIDImages"
    android:gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextViewUploadID"
        style="@style/TextID_Upload"
        android:textColor="@color/colorPrimaryDark"
        android:text="Upload Id"
        android:gravity="center"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_10sdp"
        android:src="@drawable/cloud_computing"/>
</LinearLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO TERMS AND CONDITION ***********************************-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/_30sdp">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ck_condition"
        android:layout_gravity="center|start"
        style="@style/TextTerms_SignUp"
        android:text="@string/i_have_read_and_accept_terms_and_conditions" />
</LinearLayout>
<!--*********************************************************************************************-->
<!--******************************** TODO BUTTON SIGN IN ****************************************-->
<TextView
    android:layout_width="match_parent"
    style="@style/ButtonStyle_Login"
    android:layout_marginTop="@dimen/_17sdp"
    android:background="@drawable/button_background"
    android:gravity="center"
    android:onClick="SignUP"
    android:text="@string/sign_up" />
<!--*********************************************************************************************-->
<!--******************************** TODO SIGN IN ***********************************************-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/_19sdp"
    android:layout_gravity="center"
    android:layout_marginTop="@dimen/_30sdp"
    android:layout_marginBottom="@dimen/_20sdp"
    android:gravity="center"
    android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_Login_DontAcct"
        android:textColor="@color/dark_desaturated_violet"
        android:gravity="center"
        android:text="@string/if_you_have_an_account" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text_Login_Signup"
        android:layout_marginLeft="@dimen/_2sdp"
        android:gravity="center"
        android:onClick="signInClick"
        android:text="@string/sign_in" />
</LinearLayout>
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
<!--*********************************************************************************************-->
    </LinearLayout>
</ScrollView>
</RelativeLayout>